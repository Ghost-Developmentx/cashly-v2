<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Cashly</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
<header class="bg-blue-600 text-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-2xl font-bold">Cashly</h1>
    <nav>
      <% if user_signed_in? %>
        <%= link_to "Conversations", conversations_path, class: "mx-2" %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "mx-2" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "mx-2" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "mx-2" %>
      <% end %>
    </nav>
  </div>
</header>

<main class="container mx-auto mt-6 px-4">
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>

  <%= yield %>
</main>

<footer class="mt-12 p-4 bg-gray-100">
  <div class="container mx-auto text-center text-gray-600">
    &copy; <%= Date.today.year %> Cashly - AI-First Financial Intelligence
  </div>
</footer>
</body>
</html>