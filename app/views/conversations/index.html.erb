<!-- app/views/conversations/index.html.erb -->
<div class="flex flex-col md:flex-row">
  <div class="w-full md:w-1/3 p-4">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-bold">Conversations</h2>
      <%= link_to "New Conversation", new_conversation_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    </div>

    <div class="space-y-4">
      <% if @conversations.any? %>
        <% @conversations.each do |conversation| %>
          <%= link_to conversation_path(conversation), class: "block p-4 border rounded hover:bg-gray-50" do %>
            <h3 class="font-bold"><%= conversation.title %></h3>
            <p class="text-sm text-gray-600">
              <%= pluralize(conversation.fin_messages.count, 'message') %> â€¢
              <%= time_ago_in_words(conversation.updated_at) %> ago
            </p>
          <% end %>
        <% end %>
      <% else %>
        <p class="text-gray-600">No conversations yet. Start a new one!</p>
      <% end %>
    </div>
  </div>

  <div class="w-full md:w-2/3 p-4 bg-gray-50 rounded-lg">
    <div class="flex flex-col items-center justify-center h-full text-center p-8">
      <h2 class="text-2xl font-bold mb-4">Welcome to Cashly</h2>
      <p class="text-lg text-gray-600 mb-6">
        Your AI-powered financial assistant is ready to help you manage your finances.
      </p>
      <div class="space-y-4">
        <p class="text-gray-700">Try asking Fin about:</p>
        <ul class="text-left list-disc list-inside text-gray-600">
          <li>Your spending patterns</li>
          <li>Budget recommendations</li>
          <li>Financial insights</li>
          <li>Saving opportunities</li>
        </ul>
      </div>
    </div>
  </div>
</div>