<!-- app/views/conversations/new.html.erb -->
<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6">Start a New Conversation</h2>

  <%= form_with model: @conversation, local: true do |f| %>
    <% if @conversation.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2><%= pluralize(@conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>
        <ul class="list-disc list-inside">
          <% @conversation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :title, class: "w-full px-3 py-2 border rounded", placeholder: "What's this conversation about?" %>
    </div>

    <div class="flex justify-end">
      <%= link_to "Cancel", conversations_path, class: "mr-2 px-4 py-2 border rounded" %>
      <%= f.submit "Start Conversation", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>